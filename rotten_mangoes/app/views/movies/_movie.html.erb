<div class="row text-center">
  <% @movies.each do |movie| %>

    <div class="col-sm-6 col-md-4">
        <%= link_to image_tag(movie.image_url(:thumb)), movie_path(movie), :class => "thumbnail" %>
      <div class="caption">
        <h3><%= link_to movie.title, movie_path(movie) %></h3>
        <h4><%= formatted_date(movie.release_date) %></h4>
        <p>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</p>
        <p><%= movie.description %></p>
      </div>
    </div>

  <% end %>
</div>

